<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAccent" />
                    <corners android:radius="2dp"/>
                    <padding
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp"
                        android:top="2dp"/>
                </shape>
            </item>

        </selector>
    </item>

    <item >
        <selector>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <solid android:color="#fff" />
                    <corners android:radius="2dp"/>
                    <padding
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp"
                        android:top="2dp"/>
                </shape>
            </item>

        </selector>
    </item>

    <item android:drawable="@drawable/fui_ic_facebook_white_22dp" />


</layer-list>